    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="667dp"
        android:layout_height="171dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardBackgroundColor="#FA8072"
        card_view:cardCornerRadius="25dp"
        card_view:layout_constraintHorizontal_bias="1.0"
        card_view:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="146dp"
                android:layout_height="45dp"
                android:layout_marginStart="40dp"
                android:text="Palavra: "
                android:textSize="32sp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/imagemPalavra" />

            <TextView
                android:id="@+id/palavra"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="112dp"
                android:text=""
                android:textSize="32sp"
                card_view:layout_constraintStart_toEndOf="@+id/textView"
                card_view:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/botaoConfirmar"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"

                android:background="#60d394"
                android:text="Confimar"
                card_view:layout_constraintBottom_toTopOf="@+id/limpar"
                card_view:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/limpar"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:background="#ffc857"
                android:text="Limpar"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/imagemPalavra"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="4dp"
                android:src="@android:color/transparent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/botaoPlay"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />
            <!--app:srcCompat="@android:drawable/ic_media_play" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>
