<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffd82"
    tools:context=".Activity.JogoActivity">


    <androidx.appcompat.widget.ContentFrameLayout
        android:layout_width="504dp"
        android:layout_height="203dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/teclado_jogo"
        app:layout_constraintEnd_toStartOf="@+id/vida3"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toEndOf="@+id/botao_voltar"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <fragment
            android:name="com.palavras.unicap.palavrinhas.TecladoAlfabeticoFragment"
            android:layout_width="569dp"
            android:layout_height="203dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintVertical_bias="1.0"
            tools:layout="@layout/fragment_teclado"></fragment>
    </androidx.appcompat.widget.ContentFrameLayout>


    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="667dp"
        android:layout_height="171dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardBackgroundColor="#FA8072"
        card_view:cardCornerRadius="25dp"
        card_view:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="146dp"
                android:layout_height="45dp"
                android:layout_marginStart="40dp"
                android:text="Palavra: "
                android:textSize="32sp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/imagemPalavra" />

            <TextView
                android:id="@+id/palavra"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="112dp"
                android:text=""
                android:textSize="32sp"
                card_view:layout_constraintStart_toEndOf="@+id/textView"
                card_view:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/botao_confirmar"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"

                android:background="#60d394"
                android:text="Confimar"
                card_view:layout_constraintBottom_toTopOf="@+id/botao_limpar"
                card_view:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/botao_limpar"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:background="#ffc857"
                android:text="Limpar"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/imagemPalavra"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="4dp"
                android:src="@android:color/transparent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/botao_play"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />
            <!--app:srcCompat="@android:drawable/ic_media_play" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/botao_voltar"
        android:layout_width="62dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <ImageView
        android:id="@+id/vida1"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coracao_icon" />

    <ImageView
        android:id="@+id/vida2"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vida3"
        app:srcCompat="@drawable/coracao_icon" />

    <ImageView
        android:id="@+id/vida3"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:srcCompat="@drawable/coracao_icon" />

    <Switch
        android:id="@+id/switch_teclado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:text="Teclado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vida2" />


</androidx.constraintlayout.widget.ConstraintLayout>