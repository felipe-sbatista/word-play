<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegistrarActivity"
    android:background="#fffd82">


    <TextView
        android:id="@+id/jo"
        android:layout_width="270dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="152dp"
        android:text="Digite seu nome: "
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nome"
        android:layout_width="294dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="152dp"
        android:text=""
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/jo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="312dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Salvar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jo"
        app:layout_constraintVertical_bias="0.568"
        android:background="@drawable/button_radius"/>

    <TextView
        android:id="@+id/mensagemFinal"
        android:layout_width="660dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text=""
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/jo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>