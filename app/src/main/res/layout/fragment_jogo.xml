<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600dp"
    android:layout_height="185dp"
    tools:context=".Fragment.JogoFragment"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="598dp"
        android:layout_height="175dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#FA8072"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="599dp"
            android:layout_height="175dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="146dp"
                android:layout_height="45dp"
                android:layout_marginStart="40dp"
                android:text="Palavra: "
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imagemPalavra" />

            <TextView
                android:id="@+id/palavra"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="112dp"
                android:text=""
                android:textSize="32sp"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/botao_confirmar"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="8dp"

                android:background="#60d394"
                android:text="Confimar"
                app:layout_constraintBottom_toTopOf="@+id/botao_limpar"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/botao_limpar"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="16dp"
                android:background="#ffc857"
                android:text="Limpar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/imagemPalavra"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="4dp"
                android:src="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/botao_play"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="68dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />
            <!--app:srcCompat="@android:drawable/ic_media_play" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

